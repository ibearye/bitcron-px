extends base.jade

block content

	.autopagerize_page_element:.content
		for post in posts: .post.animated.fadeInDown
			bgcover = 'http://coffin.wpista.com/wp-content/themes/Coffin/build/images/default.jpeg'
			if ( post.cover )
				bgcover = post.cover
			.post-image
				img(src=bgcover)
			.post-info
				.field
					span.date= post.date.format("%m %d,%Y")
				.post_title
					h2: a= post.title
				.field
					if post.tags: span.field.tags
						for tag in post.tags
							a.tag= tag + ","

	+h.i18n('Back to Previous Page', '上一页', 'zh_cn')
	+h.i18n('Read More Posts', '下一页', 'zh_cn')
	+h.paginator(pre_label=_('Back to Previous Page'), next_label=_('Read More Posts'))